{
  "compilerOptions": {
    "target": "ES2020",                 // 编译成 ES2020
    "module": "CommonJS",               // Node.js 常用模块
    "outDir": "./dist",                 // 编译输出目录
    "rootDir": "./",                    // 源码根目录
    "strict": true,                     // 开启严格类型检查
    "esModuleInterop": true,            // 允许 import CommonJS 模块
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
